


<div ng-controller="changeUserPasswordController" class="container">
   
    <form name="changeUserPasswordForm" id="changeUserPasswordForm" class="form-horizontal">
        </br>
        <div class="form-group">
            <label for="userName" class="col-sm-2 control-label">نام کاربري:</label>
            <div class="col-sm-4 col-xs-3">
                <input type="text" name="userName" id="userName" value="@ViewBag.name" class="form-control" readonly />
            </div>
            <div class="col-sm-6"></div>
        </div>

        <div class="form-group">
            <label for="currentPassword" class="col-sm-2 control-label">کلمه عبور فعلي:</label>
            <div class="col-sm-4">
                <input type="password" name="currentPassword" id="currentPassword" ng-model="changeUserPassword.password" class="form-control" validations="confirmValidations" />  
            </div>
            <div class="col-sm-6"></div>
        </div>

        <div class="form-group">
            <label for="newPassword" class="col-sm-2 control-label">کلمه عبور جديد:</label>
            <div class="col-sm-4">
                <input type="password" name="newPass" id="newPass" ng-model="changeUserPassword.newPassword" class="form-control col-sm-4" validations="confirmValidations" />
            </div>
            <div class="col-sm-6"></div>
        </div>

        <div class="form-group">
            <label for="newPassword" class="col-sm-2 control-label">تکرار کلمه عبور جديد:</label>
            <div class="col-sm-4 ">
                <confirm-pass-check id="confirmPass" password="changeUserPassword.newPassword" confirm="changeUserPassword.confirmPassword" class="form-control" validators="confirmValidations"></confirm-pass-check> 
            </div>
            <div class="col-sm-4"></div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <input type="button" name="submit" value="ذخيره" class="btn btn-default" ng-click="submitNewPassword()" />
            </div>
           
        </div>
    </form>
</div>




